{% extends "base.twig" %}

{% block content %}
	<article class="post-type-{{post.post_type}}" id="post-{{post.ID}}">
		<section class="article-content">
			<div class="article-header" {% if post.thumbnail.src %} style="background-image: url('{{post.thumbnail.src}}');"{% endif %}>
				<div class="wrapper">
					<h1>{{post.title}}</h1>
				</div>
				<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 1366 81" width="1366" height="81" class="header-angle">
				    <polygon points="0 81 1366 81 1366 0 0 81" fill="#fff" />
				</svg>
			</div>
			<div class="article-body wrapper">
				{{post.content}}
				<div class="timeline">
					{% for event in post.get_field('history') %}
						<div class="timeline-event">
				        	<div class="event-date">
				        		<span>{{event.date}}</span>
				        	</div>
				        	<div class="event-info">
					        	<h4 class="event-title">
					        		{{event.title}}
					        	</h4>
					        	<div class="event-description">
					        		{{event.description}}
					        	</div>
					        </div>
						</div>
				    {% endfor %}
				</div>
			</div>
		</section>
	</article>
{% endblock %}